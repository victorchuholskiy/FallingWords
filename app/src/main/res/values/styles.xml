<resources>
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
	</style>

	<style name="AppTheme.SplashTheme" parent="AppTheme">
		<item name="android:windowBackground">@drawable/bg_splash</item>
	</style>

	<style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Light" />

	<style name="AppTheme.RightButton" parent="Widget.AppCompat.Button.Colored">
		<item name="colorAccent">@color/colorRight</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="AppTheme.WrongButton" parent="Widget.AppCompat.Button.Colored">
		<item name="colorAccent">@color/colorWrong</item>
		<item name="android:textColor">@android:color/white</item>
	</style>

	<style name="AppTheme.RepeatButton" parent="Widget.AppCompat.Button.Colored">
		<item name="colorAccent">@color/mainYellow</item>
		<item name="android:textColor">@android:color/white</item>
	</style>
</resources>
